<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBrush" Color="#1D1C1B" />
    <SolidColorBrush x:Key="WindowTextBrush" Color="Gainsboro" />
    <SolidColorBrush x:Key="WindowTitleBarInactiveBackground" Color="#CECECE" />
    
    <SolidColorBrush x:Key="MouseOverOverlayBackgroundBrush" Color="#33000000" />

    <SolidColorBrush x:Key="PressedOverlayBackgroundBrush" Color="#44000000" />
    
    <SolidColorBrush x:Key="MouseOverWindowCloseButtonBackgroundBrush" Color="#E81123" />
    <SolidColorBrush x:Key="MouseOverWindowCloseButtonForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="PressedWindowCloseButtonBackgroundBrush" Color="#F1707A" />
    
    
    <!-- Buttons and Tabs -->
    <SolidColorBrush x:Key="MouseOverButtonBackgroundBrush" Color="#2E2B25" />
    <SolidColorBrush x:Key="MousePressedButtonBackgroundBrush" Color="#282723" />
    <SolidColorBrush x:Key="ActiveTabBackgroundBrush" Color="#FFD2D2D2" />
    <SolidColorBrush x:Key="InactiveTabBackgroundBrush" Color="#FFD2D2D2" />
    <SolidColorBrush x:Key="ControlsBorderBrush" Color="#FF676767" />
    
    
</ResourceDictionary>